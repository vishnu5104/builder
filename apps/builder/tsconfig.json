{
  "extends": "@webstudio-is/tsconfig/base.json",
  "include": ["app", "**/*.ts", "**/*.tsx", "../../@types/**/*.d.ts"],

  "compilerOptions": {
    "types": [
      "@remix-run/node",
      "vite/client",
      "react/canary",
      "react-dom/canary",
      "@types/dom-navigation"
    ],

    "paths": {
      "~/*": ["app/*"]
    },
    "baseUrl": ".",
    "declaration": false,
    "emitDeclarationOnly": false,
    "declarationDir": null,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true
  }
}
